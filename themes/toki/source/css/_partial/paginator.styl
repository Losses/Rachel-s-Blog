.page-nav{
    text-align: center
    font-size: .7em
    font-family: 'Noto Serif CJK SC', 'Noto Serif SC', 'Source Han Serif SC', 'Source Han Serif', source-han-serif-sc;
    padding: .5em
    margin: 5em 0
    font-weight: 700
    & > *{
        margin-right: .5em
        padding: .5em
        border-bottom: 1px dotted #ccc
        text-decoration: none
    }
    a:active,a:link,a:visited{
        color: blue-color
    }
    .current{
        color: #333
    }
}
@media (prefers-color-scheme: dark) {
    .page-nav{
        & > *{
            border-bottom: 1px dotted border-dark-color
        }
        a:active,a:link,a:visited{
            color: regular-dark-color
        }
        .current{
            color: #888
        }
    }
}