body{
    font-size: 1em;
    font-family: 'Noto Serif CJK SC', 'Noto Serif SC', 'Source Han Serif SC', 'Source Han Serif', source-han-serif-sc;
    text-align: justify;
    line-height: 1.5;
    background-color: white;
    color: light-blue-color;
    padding:2em 0;
}
h1,h2,h3,h4,h5,h6{
    color: blue-color;
    border-bottom: 1px solid light-blue-color;
    font-weight: 900;
}
blockquote{
    border-left: .4em solid light-blue-color;
    background-color: #F7F9FA;
    padding: .3em .5em .3em 1em;
    margin: .5em 0 .5em 0;
}
h1 {
    .headerlink{
        text-decoration: none
        &::before{
        content: '#'
        }
    }
}
h2 {
    .headerlink{
        text-decoration: none
        &::before{
        content: '#'
        }
    }
}
h3 {
    .headerlink{
        text-decoration: none
        &::before{
        content: '#'
        }
    }
}
*:not(pre) code{
    padding: .1em .2em;
    margin: .2em;
    border-radius: 3px;
    overflow: hidden;
    margin: 0 2px;
    color: #555;
    font-size: .9em
    font-family: "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace!important;
    background-color: #eeeeee!important;
}
a{
    padding: .1em;
}
a:link,a:active,a:visited{
   color: light-color;
}
a:hover{
    color: light-blue-color;
}
pre{
    display: block;
    word-wrap: break-word;
    word-break: break-all;
    overflow-x: auto;
    padding: .6em;
    margin: 0 2px;
    color: #555;
    font-family: "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace;
    background-color: #eeeeee;
}
pre code{
    display: block;
    word-wrap: break-word;
    word-break: break-all;
    background-color: inherit;
    border: none!important;
    font-size: .9em;
    font-family: "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace!important;
    background-color: #eeeeee!important;
}
hr{
    border: none;
    border-bottom: 2px dashed #ccc;
}
sup a{
    padding: 0!important;
    font-style: normal!important;
}
table{
    border-collapse: collapse;
    background-color:  #f8f9f9 ;
}
tr,td,th{
    border: 1px solid #ccc;
    margin: 0;
    padding: 0.3em 0.5em;
}
tr:nth-child(even){
    background-color:   #ebedef ;
}

@media (prefers-color-scheme: dark) {
    blockquote {
        background-color: #252525;
    }
    h1,h2,h3,h4,h5,h6{
        color: inherit;
        border-bottom: 1px solid border-dark-color;
    }
    hr{
        border: none;
        border-bottom: 2px dashed border-dark-color;
    }
    table{
        background-color:  inherit ;
    }
    tr,td,th{
        border: 1px solid border-dark-color;
    }
    tr:nth-child(even){
        background-color: #202020;
    }
    pre code, *:not(pre) code, pre {
        color: regular-dark-color;
        background-color: #303030!important;
    }
}