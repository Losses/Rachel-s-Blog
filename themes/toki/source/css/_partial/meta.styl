.meta{
  margin: 1em
  & > *{
    margin: 0
    padding: 0  
    font-size: .8rem
    color: regular-grey
    margin-right: .5em
  }
  .date{
    white-space: nowrap
  }
  .category-list{
    white-space: nowrap
    .category-list-item{
      display: inline-block
      margin-right: .3em
      white-space:nowrap
      .category-list-link{
        &:hover{
          color: regular-hover
        }
        text-decoration: none
        color: regular-grey
      }
    } 
  }
  .tag-list{
    white-space: pre-wrap
    .tag-list-item{
      white-space: pre-wrap
      display: inline-block
      margin-right: .5em
      word-wrap: normal
      .tag-list-link{
          &:hover{
            color: regular-hover
          }
        text-decoration: none
        color: regular-grey
      }
    } 
  }
}
@media (prefers-color-scheme: dark) {
  .meta{
    & > *{
      color: regular-light
    }
    .category-list{
      .category-list-item{
        .category-list-link{
          &:hover{
            color: regular-hover
          }
          color: regular-light
        }
      }
    }

    .tag-list{
      .tag-list-item{
        .tag-list-link{
          &:hover{
            color: regular-hover
          }
          color: regular-light
        }
      } 
    }
  }
}