.meta{
  margin: 1em
  max-width: 95%
  & > *{
    margin: 0
    padding: 0  
    font-size: .7em
    color: light-color
    margin-right: .5em
  }
  .date{
    white-space: nowrap
  }
  .category-list{
    white-space: nowrap
    .category-list-item{
      display: inline-block
      margin-right: .3em
      white-space:nowrap
      .category-list-link{
        &:hover{
          color: blue-color
        }
        text-decoration: none
        color: light-color
      }
    } 
  }

  .tag-list{
    white-space: nowrap
    .tag-list-item{
      white-space: nowrap
      display: inline-block
      margin-right: .5em
      .tag-list-link{
          &:hover{
            color: blue-color
          }
        text-decoration: none
        color: light-color
      }
    } 
  }

}
@media (prefers-color-scheme: dark) {
  .meta{
    & > *{
      color: light-dark-color
    }
    .category-list{
      .category-list-item{
        .category-list-link{
          &:hover{
            color: light-dark-color
          }
          color: regular-dark-color
        }
      }
    }

    .tag-list{
      .tag-list-item{
        .tag-list-link{
          &:hover{
            color: light-dark-color
          }
          color: regular-dark-color
        }
      } 
    }
  }
}