
.tip{
  margin-bottom:1em
  display: flex
  justify-content: center
  flex-direction: column
  button{
    align-self: center
    background-color: regular-blue;
    border: none;
    color: white;
    font-size: .8em
    padding: .4em .9em  
    border-radius: .3em
    font-weight: 400
    outline: none
    }
    button:active{ 
      opacity: .9
      -moz-box-shadow: 2px 2px 2px  #ddd; /* 老的 Firefox */
      box-shadow: 2px 2px 2px #ddd;
    }
    .tip-img{
      align-self: center
      width: 100%;
      align-items: center
      display: flex
      align-content: center
      justify-content: center
      text-align: center
      display: none
    }
    ul{
      width: 100%
      height: 100%
      margin: .5em 0 0 0 
      padding: .5em
      display: flex
      justify-content: center
      list-style: none
      li{
        list-style-type: none
        display: inline
        padding: 1em
        img{
          width: 100%
          height: 100%
          max-width: 16em
          max-height: 16em
        }
      }
    }
}