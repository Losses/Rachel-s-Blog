.archive{
  & > * {
    margin: auto
    padding: 1em
    max-width: 50em
    color: regular-dark
    font-size: 1rem  
  } 
  .post-archive{
    .year{
      font-size: 1.5rem
      display:flex
      justify-content: center 
      margin: 1em
      }
     .post-item{
       padding: .2em 0
       list-style-type: square
       display:flex
       justify-content: space-between
       .date{
         margin-right: 1em
         white-space:nowrap
        }
        .title{
            overflow: hidden
            white-space: nowrap
            text-overflow: ellipsis
            float: right
            color: regular-dark
            text-decoration: none
            border-bottom: 1px dotted #ccc
        }
     }
  }
}
@media (prefers-color-scheme: dark) {
  .archive{
    & > * {
      color: regular-light
    }
    .post-archive{
      .post-item{
          .title{
              color: regular-light
              border-bottom: 1px dotted regular-grey
          }
      }
    }
  }
}