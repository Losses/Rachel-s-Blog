footer.site-footer
  position relative
  text-align center
  line-height 1.8
  padding-top 1rem
  color #9e9e9e

  a
    color #f03838

  .site-donate
    margin 0
    font-size 2rem

    a
      display inline-block
      color $siteABgColor
      font-weight bolder
      font-size 2rem
      line-height 3rem
      height 3rem
      padding 0 1rem
      -webkit-transition padding 0.3s ease-out
      transition padding 0.3s ease-out

  .site-info
    color #9e9e9e
    font-size: 1.3rem
    margin 0.5rem 0